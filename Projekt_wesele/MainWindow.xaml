<Window x:Class="Projekt_wesele.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Wedding Planner" Height="450" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E1E">

    <Grid>
        <!-- Przycisk Home w prawym górnym rogu -->
        <Button Content="Home" Command="{Binding ShowHomeCommand}" 
                HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10"
                Visibility="{Binding IsHomeVisible, Converter={StaticResource BoolToVisibilityConverter}}"
                Background="#0288D1" Foreground="White" FontWeight="Bold"
                Padding="5" BorderBrush="{x:Null}" />

        <!-- Dynamicznie przełączany widok -->
        <ContentControl Content="{Binding CurrentView}" />
    </Grid>
</Window>
