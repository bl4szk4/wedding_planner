<Window x:Class="Projekt_wesele.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Wedding Planner" Height="450" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E1E">

    <Grid>
        <!-- Dynamicznie przełączany widok -->
        <ContentControl Content="{Binding CurrentView}" Grid.Row="0" />

        <!-- Przycisk Home po lewej stronie -->
        <Button Content="Home" Command="{Binding ShowHomeCommand}" 
                HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"
                Visibility="{Binding IsHomeVisible, Converter={StaticResource BoolToVisibilityConverter}}"
                Background="#0288D1" Foreground="White" FontWeight="Bold"
                Padding="5" BorderBrush="{x:Null}" Panel.ZIndex="1" />
    </Grid>
</Window>
